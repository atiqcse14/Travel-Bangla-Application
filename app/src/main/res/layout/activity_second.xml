<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_second"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.shovan.travelbanglaapp.SecondActivity"

    android:background="@drawable/second"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

       <EditText
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginBottom="15dp"
           android:hint="Enter Any Area to Search"

           android:id="@+id/etext"
           />

        <Button
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:text="Search"
            android:textSize="25dp"
            android:textColor="#000"
            android:background="@drawable/srch"
            android:layout_marginBottom="20dp"
            android:id="@+id/searchBtn"
            />


        <Button
            android:text="Dhaka"
            android:textSize="25dp"
            android:textColor="#fb0c1d13"
            android:textStyle="bold"
            android:background="@drawable/mbtn"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/DhakaBtn" />

        <Button
            android:text="Chittagong"
            android:textSize="25dp"
            android:textColor="#fb0c1d13"
            android:textStyle="bold"
            android:background="@drawable/mbtn"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/CtgBtn" />
        <Button
            android:text="Rajshahi"
            android:textSize="25dp"
            android:textColor="#fb0c1d13"
            android:textStyle="bold"
            android:background="@drawable/mbtn"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/RajBtn" />
        <Button
            android:text="Khulna"
            android:textSize="25dp"
            android:textColor="#fb0c1d13"
            android:textStyle="bold"
            android:background="@drawable/mbtn"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/KhulnaBtn" />
        <Button
            android:text="Barisal"
            android:textSize="25dp"
            android:textColor="#fb0c1d13"
            android:textStyle="bold"
            android:background="@drawable/mbtn"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/BarisalBtn" />
        <Button
            android:text="Sylhet"
            android:textSize="25dp"
            android:textColor="#fb0c1d13"
            android:textStyle="bold"
            android:background="@drawable/mbtn"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/SylhetBtn" />
        <Button
            android:text="Rangpur"
            android:textSize="25dp"
            android:textColor="#fb0c1d13"
            android:textStyle="bold"
            android:background="@drawable/mbtn"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/RangpurBtn" />
        <Button
            android:text="Mymensingh"
            android:textSize="25dp"
            android:textColor="#fb0c1d13"
            android:textStyle="bold"
            android:background="@drawable/mbtn"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/MymensinghBtn" />

    </LinearLayout>


</ScrollView>
