<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_rajshahi_activity"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.shovan.travelbanglaapp.Rajshahi"
    android:background="@drawable/all"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <Button
            android:text="Puthia Temple"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/puthia" />

        <Button
            android:text="Mahasthangarh"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/mahasthan" />

        <Button
            android:text="Bagha Mosque"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/bagha" />

        <Button
            android:text="Ramsagar Park"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/ramsagar" />


    </LinearLayout>


</ScrollView>
