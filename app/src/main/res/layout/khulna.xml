<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_khulna"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.shovan.travelbanglaapp.Khulna"
    android:background="@drawable/all"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <Button
            android:text="Sundarban"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/sundarban" />

        <Button
            android:text="Shait Gumbad Mosque "
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/shat" />

        <Button
            android:text="Shilaidaha Kuthibari"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/shilaidaha" />

        <Button
            android:text="Lalon Shah's Mazaar"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/lalon" />



    </LinearLayout>

</ScrollView>
