<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_dhk_place"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    tools:context="com.example.shovan.travelbanglaapp.Dhaka"
    android:background="@drawable/all"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


        <Button
            android:text="AHSAN MANJIL"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/ahsanbtn" />

        <Button
            android:text="LALBAG FORT"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/lalbag" />

        <Button
            android:text="DHANMONDI LAKE"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/dhanmondi" />


        <Button
            android:text="DHAKESWARI TEMPLE"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/dhakeswari" />


        <Button
            android:text="TARA MOSQUE"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/tara" />

        <Button
            android:text="PARLIAMENT BUILDING"
            android:textSize="25dp"
            android:textColor="#e93039"
            android:textStyle="bold"
            android:background="@drawable/button2"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:id="@+id/parliament" />


    </LinearLayout>

</ScrollView>
